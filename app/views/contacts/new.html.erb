<h3>I would be greatfull and helpfull if you shoot an email to me</h3>
<%= form_for :contact, url: contacts_path do |f|%>
  <% if @contact.errors.any?%>
    <div id="errors">
      <h2>Please take care of those <%= pluralize(@contact.errors.count, "error")%></h2>
      <ul>
      <%= @contact.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end%>

  <p>
    <%=	f.label :subject %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
